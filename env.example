# Timeline.co.zw Environment Configuration
# Copy this file to .env and update with your actual values

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Database Configuration (if needed)
DB_HOST=localhost
DB_NAME=timeline_db
DB_USER=your_db_user
DB_PASS=your_db_password

# Site Configuration
SITE_URL=https://timeline.co.zw
SITE_NAME=Timeline.co.zw
SITE_DESCRIPTION=African Music & Entertainment Hub

# Security
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=1800
MAX_LOGIN_ATTEMPTS=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_TIMEOUT=600

# Email Configuration (for newsletter)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Debug Mode (set to false in production)
DEBUG=false

# Logging
LOG_LEVEL=error
LOG_FILE=logs/app.log

# African Countries Priority
AFRICAN_COUNTRIES=ZW,ZA,NG,KE,GH,EG,MA,TN,DZ,LY,SD,ET,UG,TZ,RW,BI,MW,ZM,BW,SZ,LS,MZ,MG,MU,SC,KM,DJ,SO,ER,SS,CF,TD,NE,ML,BF,CI,LR,SL,GN,GW,GM,SN,MR,CV,AO,CD,CG,GA,GQ,ST,CM,TG,BJ
